<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/cp.css">
</head>

<body>
    <div class="d-flex">
        <div class=" menu">
            <nav class="nav flex-column border-dark">
                <h4 class="nav-link">MENU</h4>
                <a class="nav-link linkBackground" href="/category-list">Danh mục</a>
                <a class="nav-link linkHover" href="/product-list">Sản phẩm</a>
            </nav>
        </div>
        <div class="parent">
            <nav class="navbar navbar-dark bg-primary">
                <div class="container-fluid">
                  <a class="navbar-brand" href="#">Danh mục</a>
                </div>
              </nav>
            <div class="d-flex align-items-center">
                <form action="/category-list/search" method="GET">
                    <input name="name" class="inputWitdh" type="text" placeholder="Tên danh mục">
                    <select class="inputWitdh" name="status" id="">
                        <option value="">Trạng thái</option>
                        <option value="Hoạt động">Hoạt động</option>
                        <option value="Tạm ngừng">Tạm ngừng</option>
                    </select>
                    <button  class="btn btn-primary m-2 ">Bộ lọc</button>
                </form>

                <form action="/category-create" method="GET"> <button class="btn btn-success m-2">Thêm mới</button></form>
            </div>

            <div class="content">
                <table border="1" class="w-100">
                    <tr>
                        <td><h6>Tên</h6></td>
                        <td><h6>Tạo,Cập nhật</h6></td>
                        <td><h6>Trạng thái</h6></td>
                        <td><h6>Hành động</h6></td>
                    </tr>
                    <%for (const category of categories) { %>
                    <tr>
                        <td><%=category.name %></td>
                        <td>
                            <%=category.created_at %> <br>
                            <%=category.updated_at %>
                        </td>
                        <td> <%=category.status %></td>  
                        <td class="d-flex">
                            <form action=""><button class="btn btn-primary ">Sửa</button></form>
                            <form action="/delete/category/<%=category.id%>" method="POST"><button class="btn btn-danger ">Xoá</button></form>
                        </td> 
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="../js/cp.js "></script>

</html>